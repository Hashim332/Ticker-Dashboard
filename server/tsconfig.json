{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./data/*.json"]
}

