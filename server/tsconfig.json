{
  "compilerOptions": {
    "target": "es2016", // Or a more modern target if your Node.js version supports it well, e.g., "es2022"
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/server", // Output compiled JS to dist/server relative to project root
    "rootDir": "./", // Source files are in the server directory
    "resolveJsonModule": true
    // Optional: Add composite: true if this server project is intended to be built with project references
    // "composite": true
  },
  "include": [
    "./**/*.ts", // Include all .ts files in the server directory and its subdirectories
    "./data/*.json" // Include json files in a data subdirectory within server
  ],
  "exclude": [
    "node_modules" // Exclude node_modules from compilation
  ]
}
